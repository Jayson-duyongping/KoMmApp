<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_padding_half"
    card:cardCornerRadius="@dimen/common_padding_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_padding_half"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/folder_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:alpha="0.7"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/folder_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/common_summary_size" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_small_size" />
    </LinearLayout>
</androidx.cardview.widget.CardView>