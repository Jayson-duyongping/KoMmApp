    package="com.jayson.komm.dev">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application>
        <activity
            android:name=".DevActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="com.jayson.komm.dev.Main" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.ServiceActivity"
            android:exported="false" />

        <activity
            android:name=".view.AnimActivity"
            android:exported="false" />

        <service
            android:name=".service.DevJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <receiver
            android:name=".service.DevBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>